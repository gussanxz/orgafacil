<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootCadastros"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".activity.features.vendas.operacoesdiarias.cadastros.VendasCadastrosActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/txtTituloCadastros"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cadastros"
            android:textColor="@android:color/white"
            android:textSize="28sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/header_background"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="10dp"
                android:text="Estrutura de produtos"
                android:textColor="@color/cor_texto"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/itemCategorias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:background="@drawable/fundo_arredondado"
                android:clickable="true"
                android:gravity="center_vertical"
                android:onClick="exibirCadastroCategorias"
                android:orientation="horizontal"
                android:padding="4dp">

                <ImageView
                    android:id="@+id/iconCategorias"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/ic_category_24"
                    app:tint="#3A3A3A" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Categorias"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Organize os produtos para facilitar busca e visualização no PDV."
                        android:textColor="#666666"
                        android:textSize="13sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_chevron_right_24"
                    app:tint="#9A9A9A" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/itemProdutosServicos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:background="@drawable/fundo_arredondado"
                android:clickable="true"
                android:gravity="center_vertical"
                android:onClick="exibirListaProdutosServicos"
                android:orientation="horizontal"
                android:padding="4dp">

                <ImageView
                    android:id="@+id/iconProdutosServicos"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/ic_inventory_2_28"
                    app:tint="#3A3A3A" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Produtos e serviços"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Cadastre itens para venda e controle de estoque, preço e código."
                        android:textColor="#666666"
                        android:textSize="13sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_chevron_right_24"
                    app:tint="#9A9A9A" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:background="@drawable/fundo_arredondado"
                android:clipToOutline="true">

                <LinearLayout
                    android:id="@+id/itemCombos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:onClick="exibirCadastroCombos"
                    android:orientation="horizontal"
                    android:padding="4dp">

                    <ImageView
                        android:id="@+id/iconCombos"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/ic_layers_24"
                        app:tint="#3A3A3A" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Combos"
                            android:textColor="@android:color/black"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Crie kits de produtos para vender mais rápido e com preço especial."
                            android:textColor="#666666"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_chevron_right_24"
                        app:tint="#9A9A9A" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/overlayCombos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#CC000000"
                    android:elevation="10dp"
                    android:scaleType="center"
                    android:src="@drawable/ic_lock_24"
                    android:visibility="visible"
                    app:tint="@android:color/white" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:background="@drawable/fundo_arredondado"
                android:clipToOutline="true">

                <LinearLayout
                    android:id="@+id/itemModificadores"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/fundo_arredondado"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:onClick="exibirCadastroModificadores"
                    android:orientation="horizontal"
                    android:padding="4dp">

                    <ImageView
                        android:id="@+id/iconModificadores"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/ic_tune_24"
                        app:tint="#3A3A3A" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Modificadores"
                            android:textColor="@android:color/black"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Ajuste valores e regras (ex.: quantidade, adicional, desconto, tamanho)."
                            android:textColor="#666666"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_chevron_right_24"
                        app:tint="#9A9A9A" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/overlayModificadores"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#CC000000"
                    android:src="@drawable/ic_lock_24"
                    android:scaleType="center"
                    app:tint="@android:color/white"
                    android:visibility="visible"
                    android:elevation="10dp"/>
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Pessoas"
                android:textColor="@color/cor_texto"
                android:textSize="16sp"
                android:textStyle="bold" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:background="@drawable/fundo_arredondado"
                android:clipToOutline="true">

                <LinearLayout
                    android:id="@+id/itemClientes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="4dp">

                    <ImageView
                        android:id="@+id/iconClientes"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/ic_person_24"
                        app:tint="#3A3A3A" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Clientes"
                            android:textColor="@android:color/black"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Gerencie clientes, histórico de compras e vendas no fiado/parcelado."
                            android:textColor="#666666"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_chevron_right_24"
                        app:tint="#9A9A9A" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/overlayClientes"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#CC000000"
                    android:elevation="10dp"
                    android:scaleType="center"
                    android:src="@drawable/ic_lock_24"
                    android:visibility="visible"
                    app:tint="@android:color/white" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:background="@drawable/fundo_arredondado"
                android:clipToOutline="true">

                <LinearLayout
                    android:id="@+id/itemFornecedores"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="4dp">

                    <ImageView
                        android:id="@+id/iconFornecedores"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/ic_local_shipping_24"
                        app:tint="#3A3A3A" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Fornecedores"
                            android:textColor="@android:color/black"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Cadastre fornecedores para entradas, reposição e controle de compra."
                            android:textColor="#666666"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_chevron_right_24"
                        app:tint="#9A9A9A" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/overlayFornecedores"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#CC000000"
                    android:elevation="10dp"
                    android:scaleType="center"
                    android:src="@drawable/ic_lock_24"
                    android:visibility="visible"
                    app:tint="@android:color/white" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:background="@drawable/fundo_arredondado"
                android:clipToOutline="true">

                <LinearLayout
                    android:id="@+id/itemVendedores"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="4dp">

                    <ImageView
                        android:id="@+id/iconVendedores"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/ic_badge_24"
                        app:tint="#3A3A3A" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Vendedores"
                            android:textColor="@android:color/black"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Controle vendedores, permissões e comissões (se aplicável)."
                            android:textColor="#666666"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_chevron_right_24"
                        app:tint="#9A9A9A" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/overlayVendedores"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#CC000000"
                    android:elevation="10dp"
                    android:scaleType="center"
                    android:src="@drawable/ic_lock_24"
                    android:visibility="visible"
                    app:tint="@android:color/white" />
            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>