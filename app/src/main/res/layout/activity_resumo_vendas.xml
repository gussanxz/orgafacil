<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".activity.vendas.ResumoVendasActivity">



    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="@color/white">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/app_name"
            android:textSize="18sp"
            android:gravity="center_vertical|start"
            android:padding="12dp"
            android:textColor="@color/white"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/headerResumoVendas"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:orientation="horizontal"
        app:flow_horizontalAlign="start"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textVendasHoje"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vendas Hoje"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@android:color/white" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgOlhoSaldo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:padding="5dp"
                android:src="@drawable/ic_visibility_24" />

            <TextView
                android:id="@+id/textSaldo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:text="R$ 0,00"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold" />
                </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textCaixa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status do caixa"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@android:color/white" />
            <TextView
                android:id="@+id/textStatusCaixa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aberto"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:drawableLeft="@drawable/ic_lock_open_28"
                android:drawablePadding="8dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Cartões abaixo do Header -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/header_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerResumoVendas">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNovoPedido"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="NOVA VENDA"
                android:textAllCaps="true"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                app:icon="@drawable/ic_shopping_cart_checkout_24"
                app:iconTint="@android:color/white"
                app:iconSize="22dp"
                app:iconPadding="12dp"
                app:iconGravity="textStart"
                app:cornerRadius="16dp"
                app:elevation="6dp"
                android:background="@drawable/fundo_arredondado"/>

            <!-- Cartão Visão Geral -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OPERAÇÕES DIÁRIAS"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/cardCadastros"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/fundo_arredondado"
                        android:orientation="vertical"
                        android:layout_margin="4dp"
                        android:onClick="acessarVendasCadastrosActivity">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_tune_24"
                            android:layout_gravity="center"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="CADASTROS"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:lines="3" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/cardPedidosAbertos"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/fundo_arredondado"
                        android:orientation="vertical"
                        android:layout_margin="4dp">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_receipt_long_28"
                            android:layout_gravity="center"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="PEDIDOS\nABERTOS"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:lines="3" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/cardCatalogo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/fundo_arredondado"
                        android:orientation="vertical"
                        android:layout_margin="4dp">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_inventory_2_28"
                            android:layout_gravity="center"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="CATÁLOGO"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:lines="3" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Cartão Vendas Pendentes Recentes -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GESTÃO &amp; RELATÓRIOS"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/cardVendas"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/fundo_arredondado"
                        android:orientation="vertical"
                        android:layout_margin="4dp">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_monitoring_28"
                            android:layout_gravity="center"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="VENDAS"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:lines="3" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/cardEstoque"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/fundo_arredondado"
                        android:orientation="vertical"
                        android:layout_margin="4dp">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_inventory_28"
                            android:layout_gravity="center"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ESTOQUE"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:lines="3" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/cardDevolucoes"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/fundo_arredondado"
                        android:orientation="vertical"
                        android:layout_margin="4dp">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_assignment_return_28"
                            android:layout_gravity="center"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="DEVOLUÇÕES"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:lines="3" />
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/cardRelatorios"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/fundo_arredondado"
                        android:orientation="vertical"
                        android:layout_margin="4dp">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_analytics_28"
                            android:layout_gravity="center"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="RELATÓRIOS"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:lines="3" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/cardControleCaixa"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/fundo_arredondado"
                        android:orientation="vertical"
                        android:layout_margin="4dp">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_point_of_sale_28"
                            android:layout_gravity="center"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="CONTROLE\nDE CAIXA"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:lines="3" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/cardFinanceiro"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/fundo_arredondado"
                        android:orientation="vertical"
                        android:layout_margin="4dp">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_paid_28"
                            android:layout_gravity="center"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="FINANCEIRO"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:lines="3" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
