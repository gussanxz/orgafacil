<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".funcionalidades.autenticacao.visual.CadastroActivity">

    <RadioGroup
        android:id="@+id/meuToggleGroup"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/toggle_container_background"
        android:elevation="4dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/radioButtonLogin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_toggle_button_background"
            android:button="@null"
            android:gravity="center"
            android:text="Login"
            android:textColor="@color/selector_toggle_button_text_color"
            android:textSize="16sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radioButtonCadastreSe"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_toggle_button_background"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="Cadastre-se"
            android:textColor="@color/selector_toggle_button_text_color"
            android:textSize="16sp"
            android:textStyle="bold" />
    </RadioGroup>

    <LinearLayout
        android:id="@+id/linearLayoutCampos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/meuToggleGroup">

        <EditText
            android:id="@+id/editNome"
            android:layout_width="347dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:drawableStart="@drawable/ic_person_cinza_24"
            android:drawablePadding="8dp"
            android:hint="Nome"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editEmail"
            android:layout_width="347dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:drawableStart="@drawable/ic_email_cinza_24"
            android:drawablePadding="8dp"
            android:hint="E-mail"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/editSenha"
            android:layout_width="347dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:drawableStart="@drawable/ic_cadeado_cinza_24"
            android:drawableEnd="@drawable/ic_visibility_off_24"
            android:drawablePadding="8dp"
            android:hint="Senha"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/editSenhaConfirmacao"
            android:layout_width="347dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:drawableStart="@drawable/ic_cadeado_cinza_24"
            android:drawableEnd="@drawable/ic_visibility_off_24"
            android:drawablePadding="8dp"
            android:hint="Confirmar senha"
            android:inputType="textPassword" />

        <CheckBox
            android:id="@+id/checkTermos"
            android:layout_width="347dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="Concordo com os Termos e Privacidade"
            android:textSize="14sp" />

        <Button
            android:id="@+id/buttonCadastrar"
            android:layout_width="347dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Cadastrar"
            android:textStyle="bold" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCadastrarGoogle"
            android:layout_width="347dp"
            android:layout_height="48dp"
            android:backgroundTint="@color/background_google"
            android:drawableStart="@drawable/ic_google_24"
            android:drawablePadding="12dp"
            android:text="Cadastrar com Google"
            android:textColor="@color/black"
            app:cornerRadius="100dp"
            app:iconGravity="textStart" />

    </LinearLayout>

    <include
        android:id="@+id/loading_overlay"
        layout="@layout/util_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>