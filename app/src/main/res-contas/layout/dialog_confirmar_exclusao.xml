<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <View
                android:id="@+id/viewFundoIcone"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/bg_btn_excluir_circular"
                android:backgroundTint="#FFEBEE"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_lixeira_excluir_24"
                app:tint="#D32F2F"
                app:layout_constraintBottom_toBottomOf="@id/viewFundoIcone"
                app:layout_constraintEnd_toEndOf="@id/viewFundoIcone"
                app:layout_constraintStart_toStartOf="@id/viewFundoIcone"
                app:layout_constraintTop_toTopOf="@id/viewFundoIcone" />

            <TextView
                android:id="@+id/textTituloDialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Excluir Movimentação?"
                android:textColor="#212121"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/viewFundoIcone" />

            <TextView
                android:id="@+id/textMensagemDialog"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="Essa ação não poderá ser desfeita. Tem certeza que deseja remover este item?"
                android:textColor="#757575"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textTituloDialog" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancelarDialog"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="8dp"
                android:text="Cancelar"
                android:textColor="#757575"
                app:cornerRadius="12dp"
                app:layout_constraintEnd_toStartOf="@+id/btnConfirmarDialog"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textMensagemDialog" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnConfirmarDialog"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginTop="24dp"
                android:layout_marginStart="8dp"
                android:backgroundTint="#D32F2F"
                android:text="Excluir"
                android:textColor="@android:color/white"
                app:cornerRadius="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btnCancelarDialog"
                app:layout_constraintTop_toBottomOf="@id/textMensagemDialog" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>